@namespace NATSInternal.Blazor.Components

<div class="container-fluid d-flex flex-column px-2 pb-1">
    @if (Render)
    {
        @ChildContent
    }
</div>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }
    
    [Parameter, EditorRequired]
    public bool Render { get; set; }
}
