@model UserListModel
@functions {
    private string FormId => "user-list-form";
    private string RoleButtonClassName(string roleName)
    { 
        string color = Html.RoleBootstrapColor(roleName);
        return $"bg-{color} bg-opacity-10 border-{color}-subtle text-{color}";
    }   
}

<div class="row mt-3 g-0" id="user-list">
    <!-- Left column --> 
    <div class="col col-xl-8 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="row g-3 mb-2 pb-2 prtialsadf">
            <div class="col col-12">
                <partial name="UserList/UserListFiltersPartial" />
            </div>
        </div>

        <!-- User list result items -->
        <div class="row g-3 justify-content-start">
            @foreach (UserBasicModel user in Model.Items)
            {
                <div class="col col-xl-4 col-lg-4 col-md-4 col-sm-6 col-6 mb-3">
                    <partial name="UserList/UserListItemPartial" model="user" />
                </div>
            }
        </div>
        
        <!-- Pagination -->
        <div class="col col-12">
            <partial name="~/Views/Shared/MainPaginationPartial.cshtml"
                    model="Model.PaginationRanges" />
        </div>
    </div>

    <!-- Right column -->
    <div class="col col-xl-4 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="row g-3">
            <div class="col col-xl-12 col-lg-6 col-md-6 col-12 mb-3">
                <!-- Joined user list -->
                <partial name="UserList/JoinedRecentlyUserListPartial"
                        model="Model.JoinedRecentlyUsers" />
            </div>
            <div class="col col-xl-12 col-lg-6 col-md-6 col-12 mb-3">
                <!-- Upcoming birthday list -->
            </div>
        </div>
    </div>

    <style scoped>
        #user-list .all-role-button {
            --color: 111, 66, 193;
            color: rgb(var(--color)) !important;
            background-color: rgba(var(--color), 0.1) !important;
            border-color: rgba(var(--color), 0.4);
        }

        #user-list button.page-button:not(:hover):not(:focus):not(:is(.active)) {
            background: white !important;
            color: var(--font-color) !important;
            border-color: rgba(var(--bs-primary-rgb), 0.25);
        }

        #user-list button.page-button.active {
            background: var(--bs-primary) !important;
            color: white !important;
            border-color: var(--bs-primary);
        }

        #user-list .input-group select {
            background-color: rgba(var(--bs-primary-rgb), 0.1) !important;
        }

        #user-list .input-group select:not(:focus) {
            border-color: var(--bs-primary-border-subtle) !important;
            border-right-width: 0 !important;
        }

        #user-list .input-group select:disabled {
            background-color: rgba(var(--bs-secondary-rgb), 0.1) !important;
        }

        #user-list .input-group select option {
            background-color: white;
        }

        #user-list .user-list-item .avatar-container {
            width: 100px;
            height: 100px;
            overflow: hidden;
            border-radius: 50%;
        }

        #user-list .user-list-item .avatar-container img {
            object-fit: cover;
            object-position: 50% 50%;
            aspect-ratio: 1;
            width: 100%;
            height: 100%;
        }

        #user-list .user-list-item a:has(.fullname) {
            color: inherit !important;
            text-decoration: none;
        }

        #user-list .user-list-item a:has(.fullname):hover {
            text-decoration: underline;
        }

        #user-list .joined-recently-user-list img.user-avatar {
            width: 50px;
            height: 50px;
        }

        #user-list .joined-recently-user-list a:hover {
            text-decoration: underline !important;
        }

    </style>
</div>

@section PageTitle { Danh sách nhân viên }