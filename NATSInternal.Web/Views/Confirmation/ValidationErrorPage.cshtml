@model ConfirmationModel
@{
    Layout = "Pages/_ListPageLayout";
}

<div id="validation-error-page" class="p-3">
    <div class="panel">
        <div class="panel-header">
            <div class="panel-header-title">
                Dữ liệu không hợp lệ
            </div>
        </div>
        

        <div class="panel-body flex items-center gap-3 p-3">
            <i class="bi bi-exclamation-circle-fill text-red-500/80"></i>
            <div>
                <span>Đã xảy ra lỗi dữ liệu không hợp lệ.</span><br/>
                @if (Model.ReturningPageUrl is not null)
                {
                    <span>
                        Bạn có thể chọn trở về trang chủ hoặc quay lại trang @(Model.ReturningPageName ?? "Unknown")
                    </span>
                }
                else
                {
                    <span>Bạn sẽ được tự động đưa về trang chủ trong
                    <span id="remaining-seconds" data-returning-url="@Model.ReturningPageUrl">5</span>
                    giây.</span>
                }
            </div>
        </div>
    </div>
</div>